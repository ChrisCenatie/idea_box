<%= link_to "<< Categories Index", admin_categories_path %>
<%= form_for(@idea, url: "/ideas/#{@id}", method: :put) do |f| %>
  <%= f.label :idea %>
  <%= f.text_field :idea %><br/>

  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories, :id, :category %>

  <%= f.submit "Update Idea" %>
<% end %>
